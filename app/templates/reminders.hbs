<h1>Reminders</h1>

{{#if model}}

  <div class='spec-reminders'>
    {{#each model as |reminder|}}
      {{reminder-item reminder=reminder}}
    {{/each}}
  </div>
{{else}}
  <p>You have no reminders saved :( Click the New Reminder button below to add your first one!</p>
{{/if}}

{{#link-to 'reminders.new'}}
<button>Add New Reminder</button>
{{/link-to}}

{{outlet}}
